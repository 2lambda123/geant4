/control/verbose 2
/run/verbose 1
/tracking/verbose 0
/event/verbose 0
/test31/verbose 0
#
/testem/phys/addPhysics      emstandard_opt2
/testem/phys/addPhysics      step_limit
/testem/phys/stepMax         0.1 mm
/testem/phys/setCuts         1 km
#
/test31/AbsorberMaterial     G4_WATER
/test31/AbsorberThick        10 mm
/test31/NumberOfAbsorbers    60
/test31/maxDeltaEnergy       1.0 MeV
/test31/WorldMaterial        G4_AIR
/test31/HistoNumber          5
#
/run/initialize
/gun/energy                  1000.0 MeV
#
/gun/particle ion
/gun/ion 6 12 6
/run/beamOn 1
#
/testem/phys/setCuts         1 mm
/testem/phys/stepMax         1 km
#
/test31/AbsorberMaterial     G4_Si
#
#/testem/histo/fileName      t_e_st.paw
/gun/particle e-
/run/beamOn 100
#
#/testem/histo/fileName      t_mu_st.paw
/gun/particle mu-
/run/beamOn 1000
#
#/testem/histo/fileName      t_pi_st.paw
/gun/particle pi+
/run/beamOn 1000
#
#/testem/histo/fileName      t_p_st.paw
/gun/particle proton
/run/beamOn 1000
#
/gun/particle pi-
/run/beamOn 1000
#
/gun/particle anti_deuteron
/run/beamOn 1000
#
/gun/particle anti_proton
/run/beamOn 1000
