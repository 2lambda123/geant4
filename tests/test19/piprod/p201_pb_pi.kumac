macro creavec dimvex=13
 ve/cr temp(1) r 
 ve/cr ssse(1) r
 ve/cr eepr(1) r
 ve/cr nop(1) i
 ve/cr momb(1) r
 ve/cr enb(1) r
 ve/cr pdgpr(1) i
 ve/cr pdgtg(1) i
 ve/cr nevnt(1) i
 ve/cr freeN(1) r
 ve/cr freeD(1) r
 ve/cr clustP(1) r
 ve/cr rMed(1) r
 ve/cr solA(1) r
 * --- Loop over particles (1=p, 2=d, 3=t, 4=alpha) ---
 do i = 1 , 2
   if [i]=1 then
     ve/cr nptf(5) r 8 8 13 5 5
   elseif [i]=2 then
     ve/cr nptg(5) r 5 2 2 1 1
   endif
* --- Loop over angles (1=11, 2=30, 3=60) ---
   do j = 1 , 5
     if [i]=1 then
       npt=nptf([j])
     elseif [i]=2 then
       npt=nptg([j])
     endif
     if [i] = 1 .OR. [j] < 4 then
       a  = angle([j])
       ve/cr t[i][a]([npt]) r
       ve/cr s[i][a]([npt]) r
       ve/cr d[i][a]([npt]) r
       ve/cr x[i][a]([npt]) r
       ve/cr e[i][a]([npt]) r
     endif
   enddo
 enddo
 ve/del nptf
 ve/del nptg
return
