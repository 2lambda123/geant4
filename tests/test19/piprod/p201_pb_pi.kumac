macro getdat file=c0606 e=201
*
* -- in the pipro_[file]_h_e[e]_ang.vexp the pip spectra are given in:
* --  mbarn MeV^-1 Omega^-1, function of T in MeV 
* --- Loop over angles ---
  ve/cr shift(5) r 5.77 4.32 2.88 1.44 0.
  ve/cr shifd(3) r 1.92 0.96 0.
  do i = 1 , 5
    a  = angle([i])
    do j = 1 , 2
      if [j] = 1 then
        sh = shift([i])
        ve/re t[j][a],x[j][a],e[j][a] p[e]_pb_pip_[a].dat
        ve/cop $SIGMA((x[j][a]-[sh])/4780.) s[j][a]
        ve/cop $SIGMA(e[j][a]/4780.) d[j][a]
      elseif [j] = 2 then
        if [i] < 4 then
          sh = shifd([i])
          ve/re t[j][a],x[j][a],e[j][a] p[e]_pb_pim_[a].dat
          ve/cop $SIGMA((x[j][a]-[sh])/4780.) s[j][a]
          ve/cop $SIGMA(e[j][a]/4780.) d[j][a]
        endif
      endif
    enddo
  enddo
return
