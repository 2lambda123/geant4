#
# Macro file test01.extended.in
# for geometry/tracking performance test
# 100 Gev geantino
#
/control/verbose 2
# /run/verbose 2
/gun/particle geantino
/gun/energy 100 GeV
/run/initialize
#
# SimpleBox geometry made by Al
# Geantino in random directions, 1000 events.
#
/mydet/SwitchDetector SimpleBox
/mydet/SelectMaterial Al
/myPGAction/randomGun randomDirection
/tracking/verbose 1
/run/beamOn 10
/tracking/verbose 0
/run/beamOn 1000
#
# Honeycomb geometry
# Geantino in random directions, 1000 events.
#
/mydet/SwitchDetector Honeycomb
/myPGAction/randomGun randomDirection
/tracking/verbose 1
/run/beamOn 10
/tracking/verbose 0
/run/beamOn 1000
#
# Honeycomb geometry
# Geantino in random positions and directions, 1000 events.
#
/mydet/SwitchDetector Honeycomb
/myPGAction/randomGun randomPositionAndDirection
/tracking/verbose 1
/run/beamOn 10
/tracking/verbose 0
/run/beamOn 1000
exit
