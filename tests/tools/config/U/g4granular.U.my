echo ""

while test 1 = 1  ; do

g4message=`cat << EOM

Granular libraries are used by defaults, you asked to build global
compound libraries. Do you want to build 'granular' libraries too?
EOM`

dflt="n"
rp=$g4message
. ./myread
gans=$ans

	case $gans in
	
	n*|N*) 
		g4granular=n
		break
		;;
	y*|Y*) 
		g4granular=y
		break
		;;
