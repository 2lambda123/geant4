#!/usr/bin/env bash
#------------------------------------------------------------------

#---Xerces-C-------------------------------------------------------
export XERCESC_ROOT_DIR=/Users/mato/CDash/xerces-c-3.1.0
export DYLD_LIBRARY_PATH=${XERCESC_ROOT_DIR}/lib:${DYLD_LIBRARY_PATH}

#-----------------------------------------------------------------
THIS=$(dirname $0)
export WORKDIR=/Users/mato/CDash/G4
export CONFIG=branch-mac107-gcc42
export MODE=experimental

#export VERSION=g4tags-dev
export VERSION=09-05-ref-06_branch

#export geant4_benchmarks=benchmarks-V09-05-00 

#---Run the CTest script(s)-------------------------------------------
export SOURCE=${WORKDIR}/${MODE}/${VERSION}
export BINARY=${WORKDIR}/${MODE}/${CONFIG}
if [ ! -d "${SOURCE}" ]; then 
  ${THIS}/g4tagsvn.py checkout -c ${VERSION} -d ${SOURCE} -q
fi
ctest -V -S ${THIS}/g4${MODE}.cmake 




