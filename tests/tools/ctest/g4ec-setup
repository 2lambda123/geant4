#!/usr/bin/env bash
#------------------------------------------------------------------
export LC_CTYPE=en_US.UTF-8
export LC_ALL=en_US.UTF-8

echo "starting on ${HOSTNAME} at " `date`

#---Set Kerberos --------------------------------------------------
if grep -q  -e "Scientific Linux"  /etc/issue ; then 
    kinit sftnight@CERN.CH -5 -V -k -t /ec/conf/sftnight.keytab
else
  echo "No kinit done"
fi

THIS=$(dirname $0)
#---Update Scripts-------------------------------------------------

[ -r /usr/bin/lockfile ] && lockfile -l 60 ${THIS}/svn_update.lock \
                         || echo "no lockfile utility in /usr/bin"
								 
svn update ${THIS}

if test -r  ${THIS}/svn_update.lock ; then
   rm -f ${THIS}/svn_update.lock
fi
