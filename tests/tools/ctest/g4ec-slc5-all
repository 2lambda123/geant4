#!/usr/bin/env bash
#------------------------------------------------------------------
export LC_CTYPE=en_US.UTF-8
export LC_ALL=en_US.UTF-8

#-----------------------------------------------------------------
THIS=$(dirname $0)
export WORKDIR=/build/cdash/G4
export VERSION=g4tags-dev
export SOURCE=${WORKDIR}/nightly/${VERSION}
export NAME=stesting

#---Update All Scripts------------------------------------------------
svn update ${THIS}

#---Checkout Geant4 sources ---------------------------------------
rm -rf ${SOURCE}
export geant4_benchmarks=benchmarks-V09-06-02
${THIS}/g4tagsvn.py checkout -c ${VERSION} -d ${SOURCE} -n ${NAME} -q 

${THIS}/g4ec-slc5-gcc41
${THIS}/g4ec-slc5-gcc46
${THIS}/g4ec-slc5-gcc47
${THIS}/g4ec-slc5-icc12
${THIS}/g4ec-slc5-gcc43-gmake
