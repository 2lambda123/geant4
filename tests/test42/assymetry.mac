/control/verbose 2
/run/verbose 1
/tracking/verbose 0
#
/testhadr/TargetMat        G4_PbWO4
/testhadr/TargetRadius     1.1 cm
/testhadr/TargetLength     18 cm
/testhadr/RotationAngle    130. degree
/testhadr/NumberDivZ       1
#
/PWOcrystal/setup          simpleCMSPWO
#
/testhadr/PrintModulo      10
#
/testhadr/photonBias       10
#
/testhadr/CutsAll          0.7 mm
#
#/testhadr/Physics          PHYSLIST
#
# Recommended: LHEP, QGSP, QGSP_BIC, QGSP_BERT, QGSC, FTFP 
#
/testhadr/Physics          QGSP_BERT
#
/run/initialize
#
#/process/eLoss/MscStepLimit 0.2 false
#
/testhadr/HistoName        crystal
/testhadr/HistoType        root
/testhadr/HistoPrint       1
/testhadr/MaxEdep          10 GeV
#
#/process/inactivate Cerenkov
#/process/inactivate Scintillation
#
/gun/particle e-
#
#/gun/particle proton
#
#/gun/particle pi-
#/gun/particle pi+
#
/gun/energy 10. GeV
#/gun/energy 10. GeV
#/gun/energy 100. GeV
/run/beamOn 100
