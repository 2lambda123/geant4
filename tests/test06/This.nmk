$(bin)\libtest06.dll : 
	if exist $(bin)\libtest06.lib del $(bin)\libtest06.lib 
	if exist $(bin)\libtest06.exp del $(bin)\libtest06.exp 
	lib.exe $(LIBFLAGS) /def:$(mgr)\libtest06.def /out:$(bin)\libtest06.lib
	if exist $(bin)\libtest06.dll del $(bin)\libtest06.dll 
	$(LINK32) $(LINK32FLAGS) /out:$(bin)\libtest06.dll $(bin)\libtest06.exp 

$(bin)\libtest06.lib : 
	if exist $(bin)\libtest06.lib del $(bin)\libtest06.lib 
	lib.exe @<<
