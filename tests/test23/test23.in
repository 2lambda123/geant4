#
# Macro file retreive.mac
#  Retreive cut and physics table data from files under physData directory
#
/control/verbose 2
#
#/tracking/verbose 1 
/mydet/SelectMaterial Al
/run/particle/setCut 1 m
#
# retreive physics table data
#
/run/particle/retrievePhysicsTable physData 
#
/run/initialize
/run/particle/dumpCutValues
#gun parameter
# electron 500 MeV to the direction (1.,0.,0.)
/gun/direction 0 0 1
/gun/position 0 0 1 
/gun/particle e- 
/gun/energy 50 MeV
/run/beamOn 1 
#
# gamma 500 MeV in Al
#
/gun/particle gamma
/gun/energy 500 MeV
/run/beamOn 1
#
# for tests of basic e.m. processes
#
#/tracking/verbose 1 
/run/particle/retrievePhysicsTable OFF 
/run/particle/setCut 10 mm
#
# electron 500 MeV in Pb 
#
/mydet/SelectMaterial Pb
/myphys/setCut 1 1 mm
/gun/particle e-
/gun/energy 500 MeV
/run/beamOn 1
#
# muon 100 GeV in Pb
#
/gun/particle mu+
/gun/energy 100 GeV
/run/beamOn 1
#
/run/particle/dumpCutValues
exit



