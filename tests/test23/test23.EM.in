#
# Macro file test23.in
# for tests of basic e.m. processes
#
/control/verbose 2 

#set cut value
/run/particle/setCut 1 mm

# initialization
/run/initialize

#gun parameter
/gun/direction 0 0 1
/gun/position 0 0 1 
#/tracking/verbose 1 
#
# gamma 500 MeV in Al
#
/mydet/SelectMaterial Al
/myphys/setCut 1 10 mm  
/gun/particle gamma
/gun/energy 500 MeV
/run/beamOn 1
/run/particle/dumpCutValues
#
# electron 500 MeV in Air
#
/mydet/SelectMaterial Air
/myphys/setCut 1 10 mm  
/gun/particle e-
/gun/energy 500 MeV
/run/beamOn 1
/run/particle/dumpCutValues
#
# muon 100 GeV in Pb
#
/mydet/SelectMaterial Pb
/myphys/setCut 1 10 mm  
/gun/particle mu+
/gun/energy 100 GeV
/run/beamOn 1
/run/particle/dumpCutValues
exit



