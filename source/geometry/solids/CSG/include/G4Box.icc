inline
G4double G4Box::GetXHalfLength() const
{
  return fDx;
}

inline    
G4double G4Box::GetYHalfLength() const
{
  return fDy;
}

inline
G4double G4Box::GetZHalfLength() const
{
  return fDz;
}

///////////////////////////////////////////////////

inline
G4double G4Box::GetCubicVolume()
{
  if(fCubicVolume != 0.) ;
  else   fCubicVolume = 8*fDx*fDy*fDz; 
  return fCubicVolume;
}
