inline void G4ChordFinder::SetFirstFraction(G4double val){ fFirstFraction=val; }

inline G4int G4ChordFinder::SetVerbose( G4int newvalue )
{ 
  G4int oldval= fStatsVerbose; 
  fStatsVerbose = newvalue;
  return oldval; 
}

