macro plotedep.kumac
*
set * ; opt * 
*
filecase keep

set *fon -40
set mscf 1.5

set ygti 0.5  ; set gsiz 0.35 ; set ymgu 1.5
set vsiz 0.25 ; set yval 0.3  ; set ylab 0.55
set asiz 0.25 ; set yhti 0.9  ; set xlab 1.2

title '1 TeV muon in 3x3x3 m iron'
h/file 1 g4/tramu.1mm.paw
h/file 2 data/tramudat.paw

set dmod 2 ; set hcol 2 ; set plci 2
h/pl //lun2/1 
key 960000 90  2 'TRAMU' ! l
set dmod 1 ; set hcol 4 ; set plci 4
h/pl //lun1/1 s
key 960000 100 1 'G4' ! l 
atitle Edep(MeV)
exec Redraw-Axis
close 1 ; close 2

return

Macro Redraw-Axis
set plci 1
   X1 = $GRAFINFO('WNXMIN')
   X2 = $GRAFINFO('WNXMAX')
   Y1 = $GRAFINFO('WNYMIN')
   Y2 = $GRAFINFO('WNYMAX')
   IS = $GRAFINFO('?FAIS')
   IC = $GRAFINFO('?FACI')
   Set FAIS 0 ; Set FACI 1
   Box [X1] [X2] [Y1] [Y2]
   Set FAIS [IS] ; Set FACI [IC]
   Tick XL [X1] !
*   Tick YB ! [Y1]
   Return
