name := mainApplication
G4TARGET := $(name)
G4EXLIB := true

include $(G4INSTALL)/config/architecture.gmk
 
include hadronic_lists.gmk

CPPFLAGS    += \
		-I$(GDML_INC) \
	       	-I$(XERCESCROOT)/include

EXTRALIBS   += \
               -L$(GDML_LIB) \
               -lG4Evaluator \
               -lG4Processor \
               -lG4Subscribers \
               -lG4Writer \
               -lSaxana \
               -lProcesses \
               -lWriter \
               -L$(XERCESCROOT)/lib -lxerces-c 

.PHONY: all

all: lib bin

include $(G4INSTALL)/config/binmake.gmk

ifndef XERCESCROOT	
	@echo XERCESCROOT not defined!
endif
ifndef GDML_INC
	@echo GDML_INC not defined!
endif
ifndef GDML_LIB
	@echo GDML_LIB not defined!
endif

