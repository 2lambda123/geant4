#
# Toolkit directory
#
setenv G4BASE_DIR /afs/slac/package/geant4
setenv G4CURRENT /vol1/G4Home/geant4-04-01-ref-02-patch-01
setenv G4INSTALL $G4BASE_DIR/$G4CURRENT/geant4
#
# Set up G4 working directory
#
setenv G4WORKDIR $HOME/srt/g4ttt
#
# Define the architecture and CLHEP location
#
setenv G4SYSTEM
if ($OSTYPE == linux) then
  set sysnum=`uname -r | cut -c 3`
  if ("$sysnum" == "2") then
    setenv G4SYSTEM Linux-g++
    setenv CLHEP_BASE_DIR /afs/slac/package/clhep/i386_linux22/CLHEP.1.7.5.0
    setenv CLHEP_LIB CLHEP-g++.1.7.5.0
  else
    echo CLHEP not yet upgraded to this compiler: use noric-old
  endif

else if ($OSTYPE == solaris) then
  setenv G4SYSTEM SUN-CC
  setenv CLHEP_BASE_DIR /afs/slac/package/clhep/sun4x_58/CLHEP.1.7.5.0
  setenv CLHEP_LIB CLHEP-CC.1.7.5.0

else
  echo No architecture for this system
endif

#
# Set compiler to optimize
#
setenv G4OPTIMIZE 1

setenv G4LEVELGAMMADATA 1
#
# Path modifications
#
# addpath PATH $G4WORKDIR/bin/$G4SYSTEM


#
# Decide which vizualization driver to use and un-comment
# the appropriate lines
#
setenv G4VIS_USE_OPENGLX 1
