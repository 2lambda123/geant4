#
###################################################################
#                                                                 #
#  aida.env - AIDA environment setup file                         #
#                                                                 #
#  Author: Tatsumi Koi and Dennis Wright (SLAC)                   #
#  Date:   22 August 2002                                         #
#                                                                 #
###################################################################
#
setenv G4JAIDA_BASE /afs/slac/package/geant4/vol0/analysis/geant4.4.1
setenv G4ANALYSIS_USE 1

#
# for now can't use OPENGLX and AIDA at the same time - turn off OPENGL
# 
unsetenv G4VIS_USE_OPENGLX
#
# Java home
# 
setenv JDK_HOME /afs/slac.stanford.edu/package/java/i386_linux2/jdk1.3.1
if (! -e $JDK_HOME/bin/java) then
   echo "You need to install Java and/or modify script to set JDK_HOME correctly"
   goto end
endif
echo "JDK_HOME set to $JDK_HOME"

#
# Set up CLASSPATH
#
setenv JLIBPATH $G4JAIDA_BASE/lib/java
if (! -e $JLIBPATH/aida.jar) then
   echo "The AIDA.jar files seem to be missing, make sure JAIDA-G4 patch has been applied"
        echo "and that G4JAIDA_BASE is set correctly"
   goto end
endif

setenv CLASSPATH "$JLIBPATH/JASAIDA.jar:$JLIBPATH/aida.jar:$JLIBPATH/freehep-hep.jar:$JLIBPATH/freehep-base.jar:$JLIBPATH/xerces.jar:$JLIBPATH/jas.jar"
echo "CLASSPATH set to $CLASSPATH"

#
# Set up G4ANALYSIS_AIDA_CONFIG_LIBS
#
setenv COMPILER_V ` gcc -v >& /dev/stdout `
if ( "$COMPILER_V" =~ *egcs* ) then
   setenv G4TMPSYSTEM Linux-egcs
else
   setenv G4TMPSYSTEM $G4SYSTEM
endif

setenv G4ANALYSIS_AIDA_CONFIG_LIBS "-L$G4JAIDA_BASE/lib/$G4TMPSYSTEM -lFREEHEP -L$JDK_HOME/jre/lib/i386/client -ljvm"
echo "G4ANALYSIS_AIDA_CONFIG_LIBS set to $G4ANALYSIS_AIDA_CONFIG_LIBS"

#
#
setenv JVM_ARGS "-Dhep.aida.IAnalysisFactory=jas.aida.gui.JASGUIAnalysisFactory"
echo "JVM_ARGS set to $JVM_ARGS"

#
# Set up LD_LIBRARY_PATH
#
setenv LD_LIBRARY_PATH $JDK_HOME/jre/lib/i386/client:$JDK_HOME/jre/lib/i386
echo "LD_LIBRARY_PATH set to $LD_LIBRARY_PATH"

#
# turn off JAS window
#
setenv JVM_ARGS "-Dhep.aida.IAnalysisFactory=hep.aida.ref.AnalysisFactory"

end:







