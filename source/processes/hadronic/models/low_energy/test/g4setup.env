###################################################################
#
# Toolkit directory
#
# Set up G4 working directory
#
setenv G4WORKDIR `pwd`
cd $G4WORKDIR/../../../../../../
#
# Get location of G4 installation
setenv G4INSTALL `pwd`
cd $G4WORKDIR
#
# Define the architecture and CLHEP location
#
setenv G4SYSTEM
if ($OSTYPE == linux) then
  set sysnum=`uname -r | cut -c 3`
  if ("$sysnum" == "4") then
    setenv G4SYSTEM Linux-g++
    setenv CLHEP_BASE_DIR /afs/slac/package/clhep/i386_rhel30/CLHEP.1.9.2.1
    setenv CLHEP_LIB CLHEP-1.9.2.1
  else
    echo Unknown Linux architecture 
  endif

else if ($OSTYPE == solaris) then
  setenv G4SYSTEM SUN-CC
  setenv CLHEP_BASE_DIR /afs/slac/package/clhep/sun4x_58/CLHEP.1.9.2.1

else
  echo No architecture for this system
endif

#
# Set compiler to optimize
#
# setenv G4OPTIMIZE 1

#
# Path modifications
#
addpath LD_LIBRARY_PATH $CLHEP_BASE_DIR/lib

#
# Decide which vizualization driver to use and un-comment
# the appropriate lines
#
setenv G4VIS_USE_OPENGLX 1
