
exec Bayukov_p_Ta_2_pi+_118.kumac

*----------------------------------

set dmod 1
igset mtyp 27

pi=3.141592653
todegree=180/[pi]

histid=901

hi/file 1 [1]

v/cre info(10)
hi/get_vect/contents 1 info
events=info(1)
crosssect=info(2)*1000      |  convert to mb
deltaeta=info(3)

angtheta=118

deltatheta=5

angmax=[angtheta] + [deltatheta]
angmin=[angtheta] - [deltatheta]

mess angle from [angmin] to [angmax]

angmin=[angmin]/[todegree]
angmax=[angmax]/[todegree]

mess angle from [angmin] to [angmax]

factang=$rsigma(cos([angmin]) - cos([angmax]))
*factang=$rsigma(cos([angtheta]/[todegree]))

test=$sigma(cos(45./[todegree]))

mess test= [test]   [todegree]


mess factang= [factang]

v/pri info
scale = [crosssect]/[events]/[factang]/2/[pi]/180.95    | *400/180.95

hi/cre/1d [histid] 'temp' 50 0. 1.5

NTUPLE/PLOT 9090.Ekin/1000  (PDG==211&&theta>[angmin]&&theta<[angmax])*(1000./E) ! ! ! N [histid]
*NTUPLE/PLOT 9090.Ekin/1000  PDG==211 ! ! ! N [histid]

exec ../comp_feyn-x#scale_hist [histid] [scale]


histid1=9000+[histid]
*hi/pl [histid1] 
hi/pl [histid1] se

FORTRAN/CLOSE 1
hi/del 0
