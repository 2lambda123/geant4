#!/bin/sh

#cases="pi+ pi- K+"
cases="K+"
models="FTF QGSM"

events=1000

[ $# -ge 1 ] && events=$1

nucl="Au"
mom=100

for case in $cases; do
        case  $case in 
		"pi+") PDG=211;;
		"pi-") PDG=-211;;
		"proton") PDG=2212;;
		"K+")  PDG=321;;
		"K-")  PDG=-321;;
		*)  echo "undefined particle $case in script"
		    continue;;
	esac;	    
	for model in $models; do
        	fname=`echo "${case}_${nucl}_${mom}_${model}" | tr '[A-Z]' '[a-z]'`
		echo $fname
		for ext in log hbook in; do
		   [ -f $fname.$ext ] && rm $fname.$ext
		done
		cat > $fname.in << EoI
$events
$nucl
0
0
0
0
$PDG
$mom
$model
EoI
	
		$G4BIN/Linux-g++/StringTest < $fname.in > $fname.log 2>&1
	done
	
done

