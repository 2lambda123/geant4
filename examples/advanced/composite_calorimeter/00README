#
# setup to use gcc 2.95.2 from /usr/local/gcc-alt-2.95.2
# GF

set gccvers = `g++ -v |& awk 'NR==2 { print $3 }'`
if ( $gccvers == "2.95.2" ) then
   echo "default compiler seems to be gcc 2.95.2 already"
else
   echo "need to use alternative gcc"
   setenv PATH "/usr/local/gcc-alt-2.95.2/bin:${PATH}"
   setenv MANPATH "/usr/local/gcc-alt-2.95.2/man:${MANPATH}"
   if ( $?LD_LIBRARY_PATH == "0" ) then
        setenv LD_LIBRARY_PATH "/usr/local/gcc-alt-2.95.2/lib"
   else 
         echo $LD_LIBRARY_PATH | grep -q -e 'gcc-alt-2.95.2/lib' \
            || setenv LD_LIBRARY_PATH 
"/usr/local/gcc-alt-2.95.2/lib:${LD_LIBRARY_PATH}"
   endif
endif
echo "Please check that compiler is version 2.95.2:"
echo ""

gcc -v |& tail -1

setenv G4SYSTEM    Linux-g++
setenv CPPVERBOSE 1
setenv CLHEP_BASE_DIR /afs/cern.ch/sw/lhcxx/specific/redhat61/gcc-2.95.2/CLHEP/1.7.5.0
setenv G4VIS_USE_OPENGL    1
setenv G4VIS_USE_OPENGLX    1
setenv G4VIS_USE_OPENGLXM    1
setenv OGLHOME /usr/openwin/lib/
setenv   OGLLIBS   " -L${OGLHOME}/lib -lGLU -lGL "
setenv G4VIS_BUILD_VRML_DRIVER          1
setenv G4VIS_BUILD_VRMLFILE_DRIVER      1
setenv G4VIS_USE_VRML                   1
setenv G4VIS_USE_VRMLFILE               1
setenv G4LIB_BUILD_SHARED 1

#source /afs/cern.ch/cms/geant4rep/configure/configure_geant4.4.1
setenv G4INSTALL /afs/cern.ch/sw/geant4/releases/share/geant4.4.1.ref03
setenv G4LIB /afs/cern.ch/sw/geant4/releases/specific/i386_redhat61/gcc-2.95.2//geant4.4.1.ref03/lib/
setenv G4WORKDIR .
setenv LHCXXVERS 4.0.4
setenv LHCXXTOP /afs/cern.ch/sw/lhcxx/
source $LHCXXTOP/share/LHCXX/4.0.4/install/sharedstart.csh

 setenv LD_LIBRARY_PATH ${LD_LIBRARY_PATH}:/asis.local/i386_redhat61/usr.local/gcc-alt-2.95.2/lib/:${G4LIB}:${CLHEP_BASE_DIR}/lib

setenv CCAL_CONFPATH ./dataconf
setenv CCAL_SENSITIVECONF g4testbeamhcal96.conf
setenv CCAL_GEOMETRYCONF testbeamhcal96.conf
setenv CCAL_GLOBALPATH ./dataglobal
setenv CCAL_GEOMPATH ./datageom
setenv CCAL_VISPATH ./datavis

