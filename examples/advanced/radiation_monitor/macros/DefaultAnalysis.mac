# Default output file name
/radmon/analysis/SetOutputFileName                         analysis.hbook
# Format of the file: hbook or xml
/radmon/analysis/SetOutputFileFormat                       hbook
#
#
#
/radmon/analysis/CreateSensitiveDetectorType               sdt1
/radmon/analysis/AppendDataAnalysisToSensitiveDetectorType sdt1 da1
/radmon/analysis/SetDataAnalysisType                       sdt1 da1 DepositedEnergy
/radmon/analysis/CreateSensitiveDetector                   SD sdt1

/vis/disable

#/radmon/detector/SetLayerAttribute MIL-STD-105D ly1 SensitiveDetector SD
