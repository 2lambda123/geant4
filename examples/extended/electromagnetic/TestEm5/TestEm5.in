# $Id: TestEm5.in,v 1.14 2004-09-24 09:57:57 maire Exp $
#
# macro file for TestEm5.cc
#
/control/verbose 2
/run/verbose 2
#
/testem/det/setAbsMat Silicon
/testem/det/setAbsThick 20.5 mum
/testem/det/setAbsYZ     1 mm
#
/testem/phys/addPhysics  standard
###/testem/phys/addPhysics  g4v52
#
/testem/phys/setGCut 2.13 mm
/testem/phys/setECut 7.0  mum
/testem/phys/setPCut 7.0  mum
#
/run/initialize
#
/testem/gun/setDefault
/gun/particle pi+ 
/gun/energy 5 GeV
#
/testem/histo/setHisto 6 100 -0.25 0.25 mrad
#
#
/testem/histo/setFileType hbook		#for paw	
###/testem/histo/setFileType root		#for root
###/testem/histo/setFileType XML		#for jaida
/testem/histo/setFileName run0.aida 
#
/run/beamOn 100000


