# ===========================================================
#   Script for installing modules
# ===========================================================

ifndef PACKAGE
  PACKAGE := .
endif

install_dir := $(Q_LIBDIR)/$(PACKAGE)

install: $(module_name)
	@echo ... intall $(module_name) into $(install_dir)
	@if [ ! -d $(install_dir) ]; then install -d $(install_dir); fi
	@install -m 755 $(module_name) $(install_dir)

